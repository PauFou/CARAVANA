


<div class="app-container">
  <div class="app-content">
<div class="app-sidebar">
      <div class="app-sidebar-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
          <polyline points="9 22 9 12 15 12 15 22" /></svg>
      </div>
      <%= link_to my_vans_path do %>
      <div href="" class="app-sidebar-link active">
        <svg class="link-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="feather feather-pie-chart" viewBox="0 0 24 24">
          <defs />
          <path d="M21.21 15.89A10 10 0 118 2.83M22 12A10 10 0 0012 2v10z" />
        </svg>
      </div>
<%end%>
</div>
    <div class="vans-container">
      <div class="vans-container-header">
        <div class="vans-container-header-left">
          <p class="rentals-to-come">Locations Ã  venir </p>
          <p class="rentals-number"><em>  (<%=Booking.all.count%>)</em></p>
        </div>
        <p class="time"><%= Time.now().to_s.split(" ")[0] %></p>
      </div>



      <%# CARD DASHBOARD %>
      <div class = "dashboard-cards" >
        <% @bookings.each do |booking| %>
        <div class="col-3 card-trip-dashboard border rounded-4 px-0 mb-4 d-flex flex-column justify-content-between">
          <div class="m-2">
            <div class= "d-flex justify-content-center">
              <h2 style="color: #003459;"> Titre Van </h2>
            </div>
            <div class="my-2 d-flex justify-content-center ">
              <p class="card-text-dashboard" style="color: #003459;"> <%= booking.van.brand %> -  <%= booking.van.location %></p>
            </div>
            <div class="d-flex flex-row justify-content-around">
              <p><span style="color: #005FA3; font-size: 14px; font-weight: 400;"><%= booking.start_date %> - <%= booking.end_date %></span></p>
              <p class= "days">
                <% @s = booking.start_date.to_s.split("-").map{|el| el.to_i}
                    @a = Time.now().to_s.split(" ")[0].split("-").map{ |el| el.to_i}
                    @r = ((@s[0] - @a[0]) * 360) + ((@s[1] - @a[1]) * 30) + ((@s[2] - @a[2]))
                      %>
                <%if @r < 0 %>
                  <%= "#{@r * (-1)} days ago" %>
                <%else%>
                  <%= "In #{@r} days" %>
                <%end%>
              </p>
            </div>
          </div>
          <img class="card-trip-img-dashboard" src="https://images.unsplash.com/photo-1561361513-2d000a50f0dc?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1776&q=80"/>
        </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
