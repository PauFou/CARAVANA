<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1561361513-2d000a50f0dc?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1776&q=80);">
  <div class="container">
    <h1>Caravana brings <strong>vans</strong> to <strong>you</strong>!</h1>
    <p>Change your life, discover and travel with  the <strong>perfect</strong> van for you.</p>
  </div>
</div>

<div class="container">
  <div id="vans">
    <div class="row">
      <% @vans = Van.all %>
        <%@vans.each do |van|%>
          <div class="col m-1">
            <div class="card" style="width: 18rem; height:24rem">
              <div class="card-body">
                <img src="https://images.unsplash.com/photo-1561361513-2d000a50f0dc?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1776&q=80" alt="" style="width:100%; height:60%; object-fit: cover;">
                <h5 class="card-title"><%=van.brand%></h5>
                <p class="card-text"><%=van.location%></p>
                <div class='d-flex'>
                  <p style="margin-right:10px;">2<i class="fa-solid fa-user-group"></i></p>
                  <p><%=van.price_per_day%><i class="fa-solid fa-euro-sign"></i></p>
                </div>

              </div>
              <div class="bouton_card d-flex"  style="background-color:#F8F9FA;">
              <p><%= link_to "En savoir plus", van_path(van), style:"color:blue;"%>  <%= link_to "Edit", edit_van_path(van), style:"color:yellow;"%>     <%= link_to "Remove", @van, method: :delete , style:"color:red;"%>     </p> </div>
            </div>
          </div>
      <% end %>
</div>
