<%= render "shared/navbar" %>

<div class="container-fluid p-0" style="height:400px; overflow: hidden;">
  <%# <img src=VufDB8fHx8&auto=format&fit=crop&w=1776&q=80" alt="" style="width:100%; height:100%; object-fit: cover;"> %>
</div>

<div class="container">

    <div class="cards">
      <div class="card w-100" style="background-color:#F8F9FA;">
        <div class="card-body">
          <h3 class="card-title"><%=@van.brand%></h3>
          <h5 class="card-text"><%=@van.location%></h5>
        </div>
      </div>
        <div class="card w-100" style="background-color:#F8F9FA; margin-top:20px;">
          <div class="card-body" style="text-align:left;">
            <h5 class="card-title">A bit more about this van</h5>
            <p class="card-text"><%=@van.description%></p>
          </div>
        </div>



<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="van-form">
        <h1>Book a new Van</h1>
        <div class="mt-3">


          <%= simple_form_for [@van, @booking] do |f| %>
            <%= f.input :start_date, as: :date, html5: true %>
            <%= f.input :end_date, as: :date, html5: true %>
            <%= f.submit "Book your van", class: "btn btn-primary" %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
