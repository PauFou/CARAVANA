            <%= f.input :start_date, as: :date, html5: true %>
            <%= f.input :end_date, as: :date, html5: true %>
            <%= f.submit "Book your van", class: "btn btn-primary", id: "confirm-reservation" %>
          <% end %>
          <div class="border-top d-flex align-items-center">
