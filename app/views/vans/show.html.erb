<div class="container-fluid p-0" style="height:400px; overflow: hidden;">
  <img src="https://images.unsplash.com/photo-1561361513-2d000a50f0dc?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1776&q=80" alt="" style="width:100%; height:100%; object-fit: cover;">
</div>

<div class="container">

    <div class="cards">
      <div class="card w-100" style="background-color:#F8F9FA;">
        <div class="card-body">
          <h3 class="card-title"><%=@van.brand%></h3>
          <h5 class="card-text"><%=@van.location%></h5>
        </div>
      </div>
        <div class="card w-100" style="background-color:#F8F9FA; margin-top:20px;">
          <div class="card-body" style="text-align:left;">
            <h5 class="card-title">A bit more about this van</h5>
            <p class="card-text"><%=@van.description%></p>

          </div>
        </div>

    <div class="col-6 col-md-4">
      <div class="card w-100" style="background-color:#F8F9FA;">
        <div class="card-body">
          <h6 class="card-title" style="text-align:left;">Book this van!</h6>
          <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">From:</span>
            <input type="date" class="form-control" placeholder="11/12/2022" aria-label="date" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">To:</span>
            <input type="date" class="form-control" placeholder="11/12/2022" aria-label="date" aria-describedby="basic-addon1">
          </div>
          <div class="d-grid gap-2">
           <button class="btn btn-primary" type="button">Book</button>
         </div>
        </div>
      </div>

      <div class="card w-100" style="background-color:#F8F9FA; margin-top:20px;">
        <div class="card-body" style="text-align:left;">
          <h4 class="card-title">Details</h4>
          <div class='d-flex'>
            <p style="margin-right:30px;">2<i class="fa-solid fa-user-group"></i></p>
            <p><%=@van.price_per_day%><i class="fa-solid fa-euro-sign"></i></p>
          </div></p>
        </div>
      </div>
    </div>
  </div>
</div>
