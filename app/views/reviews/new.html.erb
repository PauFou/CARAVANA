


<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @booking.van.photos.first.key %>);">
  <div class="col-6" style="margin:73px auto">
    <div class="van-form">
      <div class="mt-3">


        <div class="col margin:20px;" >
            <h5>Tell us about your experience with <%=@booking.van.user.first_name%>'s van!</h5>
              <%= simple_form_for [@booking, @review] do |f| %>
                <%= f.input :content, placeholder: 'Describe your experience, how was your van?', label: "Comment" %>
                 <%= f.input :rating, collection: Review::AUTHORIZED_RATINGS, include_blank: false %>
                 <%= f.submit "Submit review", class: "btn btn-classic-new", data: { controller: 'alert', action: 'click->alert#hop'} %>
              <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
