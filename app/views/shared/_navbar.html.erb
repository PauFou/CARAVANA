<div class="navbar" data-controller="navbar" data-action="scroll@window->navbar#updateNavbar">
  <div class="navbar-left">
    <div class="navbar-logo">
      <%=link_to root_path do %>
      <img src="https://www.mpadeco.com/thumb.php?zc=3&f=0&src=/sites/mpadeco/files/products/a7919613977f4838bc2ba176ef45c515.png&fl=none&w=500&h=500"/>
    </div>
    <p>Caravana</p>
    <%end%>
  </div>
  <div class="navbar-right" id="navbarSupportedContent">
    <ul class="navbar-nav me-auto">
      <li class="nav-item active">
      <% if !current_user %>
        <a class="nav-link" data-bs-toggle="modal" data-bs-target="#loginModal" href="#">Log In</a>
      <% end %>
      </li>
      <li class="nav-item">
        <% if !current_user %>
          <a data-bs-toggle="modal" data-bs-target="#signinModal" class="nav-link" href="#">Sign Up</a>
        <% end %>
      </li>
      <li class="nav-item">
      <% if current_user %>
        <%=link_to "Dashboard",  dashboard_path,  class:"nav-link"%>
      <% end %>
      </li>
      <li class="nav-item">
        <% if current_user %>
          <%=link_to "Sign Out",  destroy_user_session_path, data: {turbo_method: :delete}, class:"nav-link"%>
        <% end %>
      </li>
    </ul>
  </div>
</div>
