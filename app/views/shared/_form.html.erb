<%= simple_form_for(van) do |f| %>
  <%= f.input :title %>
  <%= f.input :capacity %>
  <%= f.input :brand %>
  <%= f.input :color %>
  <%= f.input :description %>
  <%= f.input :price_per_day%>
  <%= f.input :mileage %>
  <%= f.input :location %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "create your van", class: "btn btn-primary" %>
<% end %>
